.panel {
  .env-list {
    .env-list-container .env-list-panel .panel-heading {
      color: $text-color;
      background-color: $tab-bar-background-color;
      border-color: $tab-bar-border-color;
    }
    .env-list-container .env-list-panel {
      .env-item {
        border-color: $tab-bar-border-color;
        color: $text-color;
        &.current {
          border-left-color: #578ddf;
        }
      }
      .server-info {
        color: $text-color;
        border-color: $tab-bar-border-color;
        .info-item {
          .progress {
            border-color: $text-color;
          }  
        }
      }
    }
  }
  
}