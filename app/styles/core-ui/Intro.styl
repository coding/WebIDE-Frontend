@import '../scaffolding';
@import '../normalize';
@import "./UserInfo";
@import 'react-tabs/style/react-tabs.css';

.page-header {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  padding: 24px;
  display: flex;
  .logo {
    background: url('~static/CloudStudio-Logo-Light.svg') -10px -9px no-repeat;
    height: 0px;
    width: 161px;
    padding-top: 20px;
    overflow: hidden;
    display: inline-block;
  }
  .nav {
    display: block;
    display: flex;
    flex: 1;
    li {
      padding-left: 30px;
    }
    a {
      font-size: 16px;
      color: #FFFFFF;
      text-decoration: none;
    }
  }
  .nav-right {
    flex: 1;
    text-align: right;
    a {
      font-size: 16px;
      color: #FFFFFF;
      text-decoration: none;
    }
  }
}
#global_footer {
  text-align: left;

}
#global_footer .record {
  background: #232F40;

  color: #76808E;
}
#global_footer .record_info {
    text-align: right;
    font-size: 12px;
}
#global_footer .record_info p {
    margin: 0;
    height: 18px;
    line-height: 18px;
}
#global_footer .record_info a {
    color: #76808E;
    text-decoration: none;
}
#global_footer .record_info a:hover {
    color: #ddd;
}
#global_footer .record_img_info {
    width: 980px;
    margin: 30px auto 0 !important;
    padding: 30px 0;
