.initialize-container {
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  -moz-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  text-align: center;
  height: 360px;

  .loading-info {
    font-size: 16px;
    line-height: 30px;
    white-space: pre-line;
    &.error {
      color: red;
    }
    &.warning {
      font-size: 16px;
      color: #FFAE0D;
      text-align: center;
    }
    a {
      color: #FFF;
    }
  }
  .loading-progress {
    width: 240px;
    margin: 0 auto;
    height: 10px;
    position: relative;

    .progress-border {
      width: 240px;
      height: 10px;
      border: 1px solid rgba(255,255,255,0.20);
      border-radius: 4px;
      /* margin-top: 20px; */
      position: absolute;
      top: 11px;
    }
  }
  .loading-error {
    margin-top: 20px;
    color: red;
    .fa-exclamation-triangle {
      color: red;
      margin-right: 6px;
    }
  }
  .request-info {
    margin-top: 40px;
    .btn {
      min-width: 200px;
      border-radius: 2px;
      margin: 0 20px;
    }
    .btn-primary {
      background: #5097E8;
      color: #FFF;
    }
    .title {
      margin-bottom: 20px;
    }
    a {
      // color: #5097E8;
      display: inline-block;
      text-decoration: none;
    }
    .link {
      padding-top: 10px;
      font-size: 14px;
      a {
        color: #5097E8;
        &:hover {
          text-decoration: underline;
        }
      }
    }
  }
}
.hint-info {
  white-space: pre-line;
  position: absolute;
  bottom: 40px;
  left: 0;
  right: 0;
  text-align: center;
  font-size: 12px;
  color: #84898F;
  .tip-info {
    display: flex;
    justify-content: center;
    margin-bottom: 20px;
    .tip-inner {
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 5px 10px;
      border-radius: 2px;
      background-color: #fff;
    }
    .tip-img {
      width: 92px;
      height: 40px;
      margin-right: 10px;
      background: url('~static/do-you-know.png') no-repeat;
      background-size: 100%;
    }
    .tip-box {
      height: 30px;
      padding: 0 15px;
      border-left: 1px solid #ccc;
      overflow: hidden;
      .tip-slide {
        transform: translateY(0);
        transition: transform 1s ease;
      }
      .tip-item {
        height: 30px;
        line-height: 30px;
        text-align: left;
        color: #333;
      }
    }
  }
  a {
    color: #FFF;
  }
}

