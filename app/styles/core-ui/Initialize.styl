.bind-qcloud-modal {
  width: 400px;
  padding: 30px;
  color: #000;
  background-color: #fff;
  border-radius: 3px;
  position: absolute;
  top: 25%;
  left: 50%;
  transform: translate(-50%, 0);
  z-index: 100;
  .title {
    margin-bottom: 20px;
    text-align: left;
    font-size: 18px;
    color: #222d3e;
  }
  .warn {
    margin-bottom: 15px;
    text-align: left;
    font-size: 14px;
    color: #77808c;
    font-weight: 400;
  }
  input {
    box-sizing: border-box;
    width: 100%;
    height: 40px;
    padding: 0 10px;
    margin-bottom: 15px;
    border: 1px solid #ddd;
    border-radius: 3px;
    outline: none;
    transition: border-color .5s ease;
  }
  input:focus {
    border-color: #1455c5;
  }
  .submit {
    width: 100%;
    height: 40px;
    margin-bottom: 15px;
    color: #fff;
    background-color: #222d3e;
    border: none;
    border-radius: 3px;
    outline: none;
  }
  .submit:hover {
    background-color: #616c7e;
  }
  .submit:active {
    background-color: #222d3e;
  }
  .cancel {
    width: 100%;
    height: 40px;
    background-color: #fff;
    border: none;
    border-radius: 3px;
    outline: none;
  }
}

.prompt-container {
  position: fixed;
  left: 50%;
  top: 0;
  transform: translate(-50%,0);
  top: 0px;
  z-index: 101;
  display: flex;
  flex-direction: column;
  margin-left: auto;
  margin-right: auto;
}

.browser-prompt {
  height: 50px;
  margin: 0 auto;
  display: inline-flex;
  top: 0px;
  color: #333;
  font-size: 14px;
  line-height: 50px;
  padding: 0px 15px;
  border-radius: 2px;
  background-color: #e6e6e6;
  box-shadow: 0 0 20px 0 rgba(3,65,157,0.10);
  justify-content: center;
  align-items: center;
  margin-bottom: 15px;
  transform: translateY(-120px);
  animation: 0.25s cubic-bezier(0.25, 0.01, 0.165, 0.99) browserPromptAnimation;
  animation-fill-mode: forwards

  .browser-prompt:first-child {
    border-radius: 0px 0px 2px 2px;
  }

  p {
    margin: 0px;
  }

  .important {
    color: red;
  }

  a {
    color: #337ab7;
    text-decoration: none;
  }

  .close {
    font-size: 18px;
    line-height: 18px;
    text-align: center;
    font-style: normal;
    cursor: pointer;
    margin-left: 20px;
    padding: 5px;
    color: #6e6e6e;
  }
  .close:hover {
    color: #333;
  }
}

