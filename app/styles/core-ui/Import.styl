.import-plugin-container {
  width: 600px;
  h2 {
    font-size: 14px;
    margin: 18px 0;
  }
  .control-label {
    text-align: left;
  }
  .checkbox-inline input[type="checkbox"] {
    position: relative;
    margin-left: -4px;
    margin-right: 8px;
  }
  .opt-list {
    padding-left: 5px;
    .btn {
      margin-bottom: 10px;
    }
  }
  .import-header {
    a {
      float: right;
      font-size: 12px;
      span {
        margin-left: 4px;
      }
    }
  }
}
.template-option {
  padding-left: 36px;
}
.template-list {
  border: 1px solid $base-border-color;
  overflow: auto;
  height: 260px;
  .template-item {
    font-weight: normal;
    line-height: 20px;
    padding: 2px 10px;
    cursor: pointer;
    display: block;
    input[type="checkbox"] {
      margin-right: 8px;
    }
    &.selected {
      background-color: $background-color-selected;
    }
    .fa {
      margin-right: 4px;
    }
  }
  .loading {
    text-align: center;
    padding-top: 118px;
    i {
      margin-right: 4px;
    }
  }
}
.template-intro {
  border: 1px solid $base-border-color;
  overflow: auto;
  height: 200px;
  padding: 10px;
  line-height: 1.4;
}

.import-from-git {
  box-sizing: border-box;
  width: 600px;
  .form {
    width: 100%;
    margin: 10px 0;
    position: relative;
    input {
      width: 100%;
    }
    .warn {
      font-size: 18px;
      font-weight: 700;
      color: #f00;
      position: absolute;
      top: 50%;
      right: 15px;
      transform: translate(0, -50%);
    }
  }
  .tip {
    margin-bottom: 10px;
    line-height: 1.5;
    .link {
      color: #18f;
      cursor: pointer;
    }
    .link:hover {
      text-decoration: underline;
    }
  }
  .box {
    width: 100%;
    padding: 20px 10px 10px;
    margin: 10px 0;
    line-height: 1.4;
    border-radius: 2px;
    color: #666;
    box-shadow: 0 0 2px rgba(0, 0, 0, .7) inset;
    white-space: pre-wrap;
    word-wrap: break-word;
    cursor: text;
    position: relative;
    &:hover .clipboard {
      display: block;
    }
    .clipboard {
      display: none;
      font-size: 16px;
      color: #6ec83f;
      cursor: pointer;
      position: absolute;
      top: 10px;
      right: 10px;
    }
  }
  .control {
    display: flex;
    justify-content: flex-end;
    .btn {
      margin-left: 20px;
    }
  }
}
