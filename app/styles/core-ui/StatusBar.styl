$bar-height = 30px;

.status-bar {
  // border-top: 1px solid transparent;
  display: flex;
  align-items: center;
  min-height: $bar-height;
  noSelect();

  .status-widget-container {
    display: flex
    &.right {
      margin-left: auto;
    }
  }

  .status-bar-menu-item {
    padding: 0 8px;
    cursor: pointer;
    > .menu {
      right: 6px;
      bottom: $bar-height;
      min-width: 200px;
    }
  }

  .toggle-layout {
    padding: 0 8px;
  }

  .status-messages {
    display: flex;
    .status-message {
      margin-right: 0.5em;
    }
    .status-message + .status-message {
      &:before {
        content: '|';
        margin-right: 0.5em;
      }
    }
  }
}